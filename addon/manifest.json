{
  "manifest_version": 2,
  "name": "Better OCR (Python Bridge)",
  "version": "1.0.2",
  "description": "Uses a local Python script to OCR PDFs and add the text as Zotero notes.",
  "author": "Gemini & User",
  "browser_specific_settings": {
    "gecko": {
      "id": "better-ocr@gemini.user",
      "strict_min_version": "60.0"
    },
    "zotero": {
      "strict_min_version": "6.99.999",
      "strict_max_version": "7.9.9",
      "update_url": "https://raw.githubusercontent.com/Lvigentini/zotero-better-ocr/master/update.json"
    }
  }
}
